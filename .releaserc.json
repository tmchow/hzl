{
  "branches": ["main"],
  "plugins": [
    ["@semantic-release/commit-analyzer", {
      "preset": "conventionalcommits",
      "releaseRules": [
        { "breaking": true, "release": "major" }
      ],
      "parserOpts": {
        "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING"]
      }
    }],
    "@semantic-release/release-notes-generator",
    ["@semantic-release/changelog", {
      "changelogFile": "CHANGELOG.md"
    }],
    ["@anolilab/semantic-release-pnpm", {
      "pkgRoot": "packages/hzl-core",
      "provenance": true
    }],
    ["@anolilab/semantic-release-pnpm", {
      "pkgRoot": "packages/hzl-web",
      "provenance": true
    }],
    ["@anolilab/semantic-release-pnpm", {
      "pkgRoot": "packages/hzl-cli",
      "provenance": true
    }],
    ["@semantic-release/exec", {
      "prepareCmd": "node scripts/sync-versions.js ${nextRelease.version} && pnpm install --lockfile-only"
    }],
    ["@semantic-release/git", {
      "assets": [
        "CHANGELOG.md",
        "package.json",
        "pnpm-lock.yaml",
        "packages/*/package.json",
        "packages/hzl-cli/README.md",
        ".claude-plugin/marketplace.json",
        ".claude-plugin/plugin.json",
        "packages/hzl-marketplace/**/*.json"
      ],
      "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
    }],
    "@semantic-release/github"
  ]
}
