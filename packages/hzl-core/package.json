{
  "name": "hzl-core",
  "version": "1.3.0",
  "description": "Core library for HZL - Lightweight task tracking for AI agents and swarms",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./db/*": {
      "types": "./dist/db/*.d.ts",
      "import": "./dist/db/*.js"
    },
    "./db/*.js": {
      "types": "./dist/db/*.d.ts",
      "import": "./dist/db/*.js"
    },
    "./events/*": {
      "types": "./dist/events/*.d.ts",
      "import": "./dist/events/*.js"
    },
    "./events/*.js": {
      "types": "./dist/events/*.d.ts",
      "import": "./dist/events/*.js"
    },
    "./projections/*": {
      "types": "./dist/projections/*.d.ts",
      "import": "./dist/projections/*.js"
    },
    "./projections/*.js": {
      "types": "./dist/projections/*.d.ts",
      "import": "./dist/projections/*.js"
    },
    "./services/*": {
      "types": "./dist/services/*.d.ts",
      "import": "./dist/services/*.js"
    },
    "./services/*.js": {
      "types": "./dist/services/*.d.ts",
      "import": "./dist/services/*.js"
    },
    "./utils/*": {
      "types": "./dist/utils/*.d.ts",
      "import": "./dist/utils/*.js"
    },
    "./utils/*.js": {
      "types": "./dist/utils/*.d.ts",
      "import": "./dist/utils/*.js"
    },
    "./fixtures/*": {
      "types": "./dist/fixtures/*.d.ts",
      "import": "./dist/fixtures/*.js"
    },
    "./fixtures/*.js": {
      "types": "./dist/fixtures/*.d.ts",
      "import": "./dist/fixtures/*.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.0",
    "ulid": "^2.3.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.6.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.0",
    "fast-check": "^3.15.0",
    "vitest": "^1.6.0",
    "tsx": "^4.19.2"
  }
}
