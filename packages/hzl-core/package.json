{
  "name": "hzl-core",
  "version": "1.19.0",
  "description": "Core library for HZL - External task ledger for coding agents and OpenClaw.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "license": "MIT",
  "author": {
    "name": "Trevin Chow",
    "url": "https://github.com/tmchow"
  },
  "contributors": [
    {
      "name": "Kalid Azad",
      "url": "https://github.com/kazad"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tmchow/hzl.git",
    "directory": "packages/hzl-core"
  },
  "homepage": "https://www.hzl-tasks.com",
  "bugs": {
    "url": "https://github.com/tmchow/hzl/issues"
  },
  "engines": {
    "node": ">=22.14.0"
  },
  "keywords": [
    "hzl",
    "task-ledger",
    "task-management",
    "coding-agents",
    "ai-agents",
    "multi-agent",
    "agent-coordination",
    "event-sourcing",
    "event-store",
    "projections",
    "sqlite",
    "libsql"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./db/*": {
      "types": "./dist/db/*.d.ts",
      "import": "./dist/db/*.js"
    },
    "./db/*.js": {
      "types": "./dist/db/*.d.ts",
      "import": "./dist/db/*.js"
    },
    "./events/*": {
      "types": "./dist/events/*.d.ts",
      "import": "./dist/events/*.js"
    },
    "./events/*.js": {
      "types": "./dist/events/*.d.ts",
      "import": "./dist/events/*.js"
    },
    "./projections/*": {
      "types": "./dist/projections/*.d.ts",
      "import": "./dist/projections/*.js"
    },
    "./projections/*.js": {
      "types": "./dist/projections/*.d.ts",
      "import": "./dist/projections/*.js"
    },
    "./services/*": {
      "types": "./dist/services/*.d.ts",
      "import": "./dist/services/*.js"
    },
    "./services/*.js": {
      "types": "./dist/services/*.d.ts",
      "import": "./dist/services/*.js"
    },
    "./utils/*": {
      "types": "./dist/utils/*.d.ts",
      "import": "./dist/utils/*.js"
    },
    "./utils/*.js": {
      "types": "./dist/utils/*.d.ts",
      "import": "./dist/utils/*.js"
    },
    "./fixtures/*": {
      "types": "./dist/fixtures/*.d.ts",
      "import": "./dist/fixtures/*.js"
    },
    "./fixtures/*.js": {
      "types": "./dist/fixtures/*.d.ts",
      "import": "./dist/fixtures/*.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "libsql": "^0.5.0",
    "ulid": "^2.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^4.0.18",
    "fast-check": "^3.15.0",
    "tsx": "^4.19.2",
    "vitest": "^4.0.18"
  }
}
